# -*- makefile -*-

if HAVE_PYTHON

# For now
# TESTS       += nbb/nbb
bin_SCRIPTS += nbb/nbb
EXTRA_DIST  += nbb/nbb.in

CLEANFILES += nbb/nbb
nbb/nbb: $(srcdir)/nbb/nbb.in nbb/nbb_lib.py
	$(SED)	-e "s|[@]PYTHON@|$(PYTHON)|" \
		-e "s|[@]pythondir@|$(pythondir)|" \
		< $(srcdir)/nbb/nbb.in > nbb/nbb
	chmod +x nbb/nbb

python_PYTHON += nbb/nbb_lib.py

endif

# End of Makefile-files.
